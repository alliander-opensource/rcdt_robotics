#!/bin/bash

# SPDX-FileCopyrightText: Alliander N. V.
# 
# SPDX-License-Identifier: Apache-2.0

branch_name=$1
changed_files=($(git diff --name-only origin/main))

image_tag="latest"
if [[ $branch_name != main ]] && [[ ${changed_files[@]} =~ dockerfiles/* ]]; then
    image_tag="${branch_name/\//-}-latest"
fi

echo ${image_tag}